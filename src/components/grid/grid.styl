.sea-blocks
  padding 30px 0
  display flex
  justify-content space-around

  .user
    &.disabled

      .ship
        background rgba(0,0,0,.5)

      &:after
        content ''
        display block
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index 100

  .computer
    &.disabled
      &:after
        content ''
        display block
        position absolute
        background rgba(0,0,0,.5)
        top 0
        left 0
        width 100%
        height 100%
        z-index 100
        transition .3s

  .grid
    position relative
    width 500px
    height 500px
    background repeating-linear-gradient(to bottom, transparent, transparent 49px, rgba(0, 0, 0, .1) 49px, rgba(0, 0, 0, .1) 50px), repeating-linear-gradient(to right, transparent, transparent 49px, rgba(0, 0, 0, .1) 49px, rgba(0, 0, 0, .1) 50px), linear-gradient(to right, rgba(0,0,0,.1) 0, rgba(0,0,0,.1) 1px, transparent 1px), linear-gradient(to bottom, rgba(0,0,0,.1) 0, rgba(0,0,0,.1) 1px, transparent 1px)

  .row
    position relative
    z-index 10
    display flex
    height 50px

  .cell
    box-sizing border-box
    width 50px
    height 50px
    transition .3s

    &:hover
      cursor pointer
      background pink

  .ship-area
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index 0

    .row
      display flex
      height 50px

    .cell
      box-sizing border-box
      width 50px
      height 50px
      transition .3s
      position relative

    .miss,
    .hit
      position absolute
      top 0
      left 0
      bottom 0
      right 0

      &:before
        position absolute
        content ''
        display block
        width 10px
        height 10px
        transform translate(-50%, -50%)
        top 50%
        left 50%

    .miss
      &:before
        border-radius 50%
        background red
    .hit
      &:before
        width 50px
        height 50px
        background green


.ship
    background rgba(0, 0, 0, .2)
    height 100%


